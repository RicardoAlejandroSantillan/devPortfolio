<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alex Portfolio</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/x-icon" href="~/icons/icon.ico">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/devPortfolio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stars.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/social-links.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/languages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/carousel.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />

    <script src="~/js/stars.js"></script>
</head>
<body>
    <header>
    </header>
    <div class="container">
        <div class="sky">
            <div class="stars-layer stars-small"></div>
            <div class="stars-layer stars-medium"></div>
            <div class="stars-layer stars-large"></div>
            <div class="shooting-stars"></div>
        </div>


        <div class="top-panel">
            <h2 data-translate="header.hello">#HOLA MUNDO</h2>
            <div class="line">
                <h1 data-translate="header.name">Soy Ricardo Alejandro Pérez Santillán</h1>
            </div>
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="language-selector">
        <button class="lang-btn active" data-lang="es">ES</button>
        <button class="lang-btn" data-lang="en">EN</button>
    </div>

    <script src="~/js/stars.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/carousel.js" asp-append-version="true"></script>
    <script src="~/js/translation.js" asp-append-version="true"></script>
    <script src="~/js/menu-toggle.js" asp-append-version="true"></script>
	<script src="~/js/typewritting_effect.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>